<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="26dp">

<RelativeLayout
    android:id="@+id/book_item_adapter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/book_item_id"
        android:layout_width="39dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="8839" />

    <View
        android:id="@+id/View24"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/book_item_id"
        android:layout_alignParentTop="true"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/book_item_name"
        android:layout_width="119dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/View24"
        android:gravity="center"
        android:text="第一行代码:安卓" />

    <View
        android:id="@+id/View25"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/book_item_name"
        android:layout_alignParentTop="true"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/book_item_price"
        android:layout_width="59dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/View25"
        android:gravity="center"
        android:text="88.55" />

    <View
        android:id="@+id/View26"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/book_item_price"
        android:layout_alignParentTop="true"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/book_item_pages"
        android:layout_width="29dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/View26"
        android:gravity="center"
        android:text="999" />

    <View
        android:id="@+id/View27"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/book_item_pages"
        android:layout_alignParentTop="true"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/book_item_author"
        android:layout_width="59dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/View27"
        android:gravity="center"
        android:text="IceFrog" />

    <View
        android:id="@+id/View28"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/book_item_author"
        android:layout_alignParentTop="true"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/book_item_press"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/View28"
        android:gravity="center"
        android:text="中国工信出版社" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/book_item_id"
        android:background="@color/gray" />
</RelativeLayout>
</RelativeLayout>
